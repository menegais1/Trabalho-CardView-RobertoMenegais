<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    android:id="@+id/cardview_adapterconta"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="3dp"
    android:foreground="?attr/selectableItemBackground"

    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_card_adapterconta"
            android:layout_marginLeft="3dp"
            android:textColor="@color/colorPrimary"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_adapterconta"
                android:layout_gravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/imageview_adapterconta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_vertical|fill_horizontal|center"
                card_view:srcCompat="@drawable/ic_menu_camera"/>
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>